<%- include('header') %>
    <div class="container">
        <div class="row">
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Edit Password Details</div>
                    </div>
                    <div class="panel-body" >
                        <form action="/password-detail/edit/<%= record._id %>" id="passwordform" class="form-horizontal" method="post" role="form">
                            <% if(error ==='Please fill all the details!!'){%>
                                <div id="signupalert" class="alert alert-danger"><p style="text-align:center"><%= error %></p></div>
                            <% } %>
                            <%if(error ==='Data updated successfully!!'){%>
                                <div id="signupalert" class="alert alert-success"><p style="text-align:center"><%= error %></p></div>
                            <% } %>
                            <input type="hidden" name="password_category" value="<% record.password_category %>">
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Project Name</label>
                                <div class="col-md-9">
                                    <input type="textbox" class="form-control" name="project_name"  placeholder="Enter Your Project Name" value="<%= record.project_name %>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Details</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" id="editor" name="password_details" rows="5" placeholder="Enter Your Password Details"><%- record.password_details %></textarea>
                                </div>
                            </div>
                            <input type="hidden" name="id" value="<%= record._id %>">
                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="Update Password" class="btn btn-primary">
                                    </div>
                                </div>
                            <p><a href="/view-all-password">View All Password Lists</a></p>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            CKEDITOR.replace( 'editor' );
        </script>
            <p style="position: absolute; left:50%; bottom: -20%; text-align:center;">Copy right &copy; PMS</p>
    </body>
</html>