<%- include('header') %>
    <div class="container">
        <div class="row">
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title">Add New Password</div>
                  </div>
                  <div class="panel-body" >
                    <form action="/add-new-password" id="passwordForm" class="form-horizontal" method="post"  role="form">
                      <% if(success!='') {%>
                        <p style="text-align:center; color:green;"><%= success %></p>
                      <% } %>
                      <div class="form-group">
                        <label for="pass_cat" class="col-md-3 control-label">Password</label>
                          <div class="col-md-9">
                            <select class="form-control" name="pass_cat">
                              <% if(records.length>0){
                                records.forEach(function(row) {%>
                                  <option value="<%=row.password_category %>"><%=row.password_category %></option>
                                <% })} %>
                            </select>
                          </div>
                      </div>
                      <div class="form-group">
                        <label for="pass_details" class="col-md-3 control-label">Project Name</label>
                          <div class="col-md-9">
                            <input type="textbox" class="form-control" name="project_name" rows="5" placeholder="Enter Your New Project Name"></input>
                          </div>
                      </div>
                      <div class="form-group">
                        <label for="pass_details" class="col-md-3 control-label">Password Details</label>
                          <div class="col-md-9">
                            <textarea class="form-control" name="pass_details" rows="5" id="editor" placeholder="Enter Your New Password"></textarea>
                          </div>
                      </div>
                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                          <input type="submit" name="submit" value="Add Category" class="btn btn-primary"></input>
                        </div>
                      </div>
                      <p><a href="/view-all-password">View all password</a></p>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <script>
      CKEDITOR.replace('editor');
    </script>
    <p style="position: absolute; left:50%; bottom: -30%; text-align:center;">Copy right &copy; PMS</p>
  </body>
</html>